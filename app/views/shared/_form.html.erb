<%= form_with model: @article do |form| %>
  <% @article.errors.full_messages.each do |message| %>
    <div>
      <%= message %>
    </div>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title%>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body%>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </div>

  <div>
    <%= form.submit%>
  </div>
<% end %>
